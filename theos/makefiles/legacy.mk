FRAMEWORKDIR = $(THEOS)
FW_BINDIR = $(THEOS_BIN_PATH)
FW_MAKEDIR = $(THEOS_MAKE_PATH)
FW_INCDIR = $(THEOS_INCLUDE_PATH)
FW_LIBDIR = $(THEOS_LIBRARY_PATH)
FW_MODDIR = $(THEOS_MODULE_PATH)

FW_PROJECT_DIR = $(THEOS_PROJECT_DIR)

export FRAMEWORKDIR FW_BINDIR FW_MAKEDIR FW_INCDIR FW_LIBDIR FW_MODDIR
export FW_PROJECT_DIR

FW_PLATFORM_NAME = $(THEOS_PLATFORM_NAME)
FW_TARGET_NAME = $(THEOS_TARGET_NAME)

FW_STAGING_DIR = $(THEOS_STAGING_DIR)

ifneq ($(FW_BUILD_DIR),)
THEOS_BUILD_DIR ?= $(FW_BUILD_DIR)
else
FW_BUILD_DIR = $(THEOS_BUILD_DIR)
endif

ifneq ($(FW_OBJ_DIR_NAME),)
THEOS_OBJ_DIR_NAME ?= $(FW_OBJ_DIR_NAME)
endif

FW_OBJ_DIR = $(THEOS_OBJ_DIR)

ifneq ($(FW_SUBPROJECT_PRODUCT),)
THEOS_SUBPROJECT_PRODUCT ?= $(FW_SUBPROJECT_PRODUCT)
else
FW_SUBPROJECT_PRODUCT = $(THEOS_SUBPROJECT_PRODUCT)
endif

FW_INSTANCE = $(THEOS_CURRENT_INSTANCE)

FW_SHARED_BUNDLE_RESOURCE_PATH = $(THEOS_SHARED_BUNDLE_RESOURCE_PATH)
FW_PACKAGE_NAME = $(THEOS_PACKAGE_NAME)
FW_PACKAGE_ARCH = $(THEOS_PACKAGE_ARCH)
FW_PACKAGE_VERSION = $(THEOS_PACKAGE_BASE_VERSION)
FW_PACKAGE_DEBVERSION = $(THEOS_PACKAGE_VERSION)
FW_PACKAGE_FILENAME = $(THEOS_PACKAGE_FILENAME)

ifdef FW_DEVICE_TUNNEL
FW_DEVICE_PORT = 2222
FW_DEVICE_IP = 127.0.0.1
endif

ifneq ($(FW_DEVICE_IP),)
THEOS_DEVICE_IP ?= $(FW_DEVICE_IP)
endif

ifneq ($(FW_DEVICE_PORT),)
THEOS_DEVICE_PORT ?= $(FW_DEVICE_PORT)
endif

ifneq ($(FW_DEVICE_USER),)
THEOS_DEVICE_USER ?= $(FW_DEVICE_USER)
endif
